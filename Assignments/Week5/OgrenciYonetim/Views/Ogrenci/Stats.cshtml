@model Dictionary<string, int>

@{
    ViewBag.Title = "İstatistikler";
}

<div style="padding: 20px;">
    <h2 style="color: #615dee; font-size: 32px; margin-bottom: 20px;">Bölüm İstatistikleri</h2>

    @if (ViewBag.Hata != null)
    {
        <p style="color: red; font-weight: 700;">@ViewBag.Hata</p>
    }

    @if (Model != null && Model.Count > 0)
    {
        int toplamOgrenci = Model.Values.Sum();
        
        <p style="color: cadetblue; font-size: 20px; font-weight: 700;">
            Toplam @toplamOgrenci öğrenci, @Model.Count farklı bölümde kayıtlı.
        </p>

        <table class="book-table">
            <tr class="baslik">
                <td>Sıra</td>
                <td>Bölüm</td>
                <td>Öğrenci Sayısı</td>
                <td>Yüzde</td>
            </tr>

            @{ int sira = 1; }
            @foreach (var item in Model)
            {
                double yuzde = (double)item.Value / toplamOgrenci * 100;
                <tr>
                    <td>@sira</td>
                    <td>@item.Key</td>
                    <td>@item.Value</td>
                    <td>%@yuzde.ToString("F1")</td>
                </tr>
                sira++;
            }
        </table>

        <div style="margin-top: 20px;">
            @Html.ActionLink("Listeye Dön", "Index", null, new { style = "padding: 10px 20px; background-color: #615dee; color: white; text-decoration: none; display: inline-block; border-radius: 5px; font-weight: 700;" })
        </div>
    }
    else
    {
        <p style="color: cadetblue; font-size: 20px; font-weight: 700;">
            Henüz istatistik verisi bulunmamaktadır.
        </p>
        <div style="margin-top: 20px;">
            @Html.ActionLink("Listeye Dön", "Index", null, new { style = "padding: 10px 20px; background-color: #615dee; color: white; text-decoration: none; display: inline-block; border-radius: 5px; font-weight: 700;" })
        </div>
    }
</div>
