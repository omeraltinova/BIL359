<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - İMÜ Kütüphanesi - Yönetici Paneli</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/Site.css")">
</head>
<body class="body">
    <center>
    <div id="container">
        <div id="header">
            <div id="logo">
                <div style="padding-top: 50px; font-size: 24px; font-weight: 700; color: #615dee;">
                    İMÜ
                </div>
            </div>

            <nav aria-label="Ana menü">
                <ul class="menu">
                    <li><a href="@Url.Action("Index", "Admin")">Admin Ana Sayfa</a></li>
                    <li><a href="@Url.Action("Index", "Kitap")">Kitaplar Yönetimi</a></li>
                    <li><a href="@Url.Action("Kullanicilar", "Admin")">Üyeler</a></li>
                    <li><a href="@Url.Action("Logout", "Auth")">Çıkış</a></li>
                </ul>
            </nav>

            <div id="login">
                <span style="color: white; font-weight: bold;">Yönetici Paneli</span>
            </div>
        </div>

        <div id="content">
            @if (TempData["Basari"] != null)
            {
                <div style="background-color: #d4edda; color: #155724; padding: 15px; margin-bottom: 20px; border-radius: 12px; font-size: 18px; font-weight: 600;">
                    ✓ @TempData["Basari"]
                </div>
            }

            @if (TempData["Hata"] != null)
            {
                <div style="background-color: #f8d7da; color: #721c24; padding: 15px; margin-bottom: 20px; border-radius: 12px; font-size: 18px; font-weight: 600;">
                    ✗ @TempData["Hata"]
                </div>
            }

            @RenderBody()
        </div>

        <div id="footer">
            <p style="padding: 20px; text-align: center; color: white; font-size: 18px;">
                &copy; @DateTime.Now.Year - İstanbul Medeniyet Üniversitesi
            </p>
        </div>
    </div>
    </center>
</body>
</html>

