<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Öğrenci Yönetim Sistemi</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/Site.css")">
</head>
<body class="body">
    <center>
    <div id="container">
        <div id="header">
            <div id="logo">
                <div style="padding-top: 50px; font-size: 24px; font-weight: 700; color: #615dee;">
                    İMÜ
                </div>
            </div>

            <nav aria-label="Ana menü">
                <ul class="menu">
                    <li>@Html.ActionLink("Ana Sayfa", "Index", "Ogrenci")</li>
                    <li>@Html.ActionLink("Yeni Öğrenci", "Create", "Ogrenci")</li>
                    <li>@Html.ActionLink("İstatistikler", "Stats", "Ogrenci")</li>
                </ul>
            </nav>

            <div id="login">
                <a href="#">Admin</a>
            </div>
        </div>

        <div id="content">
            @if (TempData["Basari"] != null)
            {
                <div class="alert alert-success">
                    ✓ @TempData["Basari"]
                </div>
            }

            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-error">
                    ✗ @TempData["Hata"]
                </div>
            }

            @RenderBody()
        </div>

        <div id="footer">
            <p style="padding: 20px; text-align: center; color: white; font-size: 18px;">
                &copy; @DateTime.Now.Year - İstanbul Medeniyet Üniversitesi
            </p>
        </div>
    </div>
    </center>
</body>
</html>

