@model OgrenciYonetim.Models.Kitap

@{
    ViewBag.Title = "Kitap Düzenle";
}

<div style="padding: 20px;">
    <h2 style="color: #615dee; font-size: 32px; margin-bottom: 20px;">Kitap Düzenle</h2>

    @using (Html.BeginForm("Edit", "Kitap", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)
        
        @Html.ValidationSummary(true, "", new { style = "color: red; font-weight: 700;" })

        <table style="border-collapse: collapse;">
            <tr>
                <td style="padding: 10px; font-weight: 700; font-size: 18px;">ID:</td>
                <td style="padding: 10px;">
                    <input type="text" value="@Model.ID" disabled style="width: 300px; padding: 8px; font-size: 16px; background-color: #f0f0f0;" />
                </td>
            </tr>
            <tr>
                <td style="padding: 10px; font-weight: 700; font-size: 18px;">
                    @Html.LabelFor(model => model.kitap_adi)
                </td>
                <td style="padding: 10px;">
                    @Html.TextBoxFor(model => model.kitap_adi, new { style = "width: 300px; padding: 8px; font-size: 16px;" })
                    @Html.ValidationMessageFor(model => model.kitap_adi, "", new { style = "color: red;" })
                </td>
            </tr>
            <tr>
                <td style="padding: 10px; font-weight: 700; font-size: 18px;">
                    @Html.LabelFor(model => model.yazar)
                </td>
                <td style="padding: 10px;">
                    @Html.TextBoxFor(model => model.yazar, new { style = "width: 300px; padding: 8px; font-size: 16px;" })
                    @Html.ValidationMessageFor(model => model.yazar, "", new { style = "color: red;" })
                </td>
            </tr>
            <tr>
                <td style="padding: 10px; font-weight: 700; font-size: 18px;">
                    @Html.LabelFor(model => model.isbn)
                </td>
                <td style="padding: 10px;">
                    @Html.TextBoxFor(model => model.isbn, new { style = "width: 300px; padding: 8px; font-size: 16px;" })
                    @Html.ValidationMessageFor(model => model.isbn, "", new { style = "color: red;" })
                </td>
            </tr>
            <tr>
                <td style="padding: 10px; font-weight: 700; font-size: 18px;">
                    @Html.LabelFor(model => model.yil)
                </td>
                <td style="padding: 10px;">
                    @Html.TextBoxFor(model => model.yil, new { style = "width: 300px; padding: 8px; font-size: 16px;", type = "number" })
                    @Html.ValidationMessageFor(model => model.yil, "", new { style = "color: red;" })
                </td>
            </tr>
            <tr>
                <td style="padding: 10px; font-weight: 700; font-size: 18px;">Kayıt Tarihi:</td>
                <td style="padding: 10px; color: cadetblue; font-size: 16px;">
                    @Model.kayit_tarihi.ToString("dd.MM.yyyy HH:mm")
                </td>
            </tr>
            <tr>
                <td colspan="2" style="padding: 10px;">
                    <button type="submit" class="btn" style="padding: 10px 20px; background-color: green; color: white; cursor: pointer;">Güncelle</button>
                    @Html.ActionLink("İptal", "Index", null, new { @class = "btn", style = "padding: 10px 20px; background-color: red; color: white; text-decoration: none; display: inline-block; margin-left: 10px;" })
                </td>
            </tr>
        </table>
    }
</div>

